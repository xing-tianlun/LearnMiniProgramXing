<!--pages/text/text.wxml-->
<!-- 1.text组件的基本使用 -->
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!-- 2.selectable：true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable="{{true}}">Hello Xing\n</text>
<text selectable>Hello Xing\n</text>

<!-- 3.space: 决定文本空格的大小 -->
<!-- ensp: 半个中文字符的大小 -->
<!-- emsp: 一个中文字符的大小 -->
<text>Hello World\n</text>
<text space="nbsp">Hello World\n</text>
<text space="emsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>

<!-- 4.decode:属性：是否解码文本 -->
<text decode="{{true}}">5 &gt; 3\n</text>
<text decode>5 &gt; 3\n</text>




